<?php

require_once __DIR__ . '/quinieleitor_test_helper.inc';

class QuinieleitorAdminTest extends DrupalWebTestCase {

  private $admin;
  private $helper;
  private $betters = array();

  function getInfo() {
    return array(
      'name' => 'Quinieleitor admin',
      'description' => 'Functional tests for administrators',
      'group' => 'Quinieleitor'
    );
  }


  function setUp() {
    parent::setUp('quinieleitor');
    $this->admin = $this->drupalCreateUser(array('access content', 'add betting slips', 'resolve betting slips'));
    $this->betters[] = $this->drupalCreateUser(array('access content'));
    $this->betters[] = $this->drupalCreateUser(array('access content'));
    $this->helper = new QuinieleitorTestHelper;
  }


  function testAdminsCreateBettingSlips() {
    // Arrange
    $this->drupalLogin($this->admin);
    $betting_slip = array(
      'date' => '2014-08-24',
      'matches[0]' => 'SEV-VAL',
      'matches[1]' => 'ALM-ESP',
      'matches[2]' => 'CEL-GET',
      'matches[3]' => 'RMA-COR',
      'matches[4]' => 'EIB-RSO',
      'matches[5]' => 'RAY-ATM',
      'matches[6]' => 'GRA-DEP',
      'matches[7]' => 'FCB-ELC',
      'matches[8]' => 'LEV-VIL',
      'matches[9]' => 'MAL-ATH',
    );

    // Act
    $this->drupalPost('admin/quinieleitor/add', $betting_slip, 'Add');

    // Assert
    $slips = quinieleitor_load_betting_slips();
    $this->assertEqual(1, count($slips));
    $matches = array_values($slips[0]->matches);
    $this->assertEqual($matches[0]->name, 'SEV-VAL', sprintf('%s equals expected', $matches[0]->name));
    $this->assertEqual($matches[1]->name, 'ALM-ESP', sprintf('%s equals expected', $matches[1]->name));
    $this->assertEqual($matches[2]->name, 'CEL-GET', sprintf('%s equals expected', $matches[2]->name));
    $this->assertEqual($matches[3]->name, 'RMA-COR', sprintf('%s equals expected', $matches[3]->name));
    $this->assertEqual($matches[4]->name, 'EIB-RSO', sprintf('%s equals expected', $matches[4]->name));
    $this->assertEqual($matches[5]->name, 'RAY-ATM', sprintf('%s equals expected', $matches[5]->name));
    $this->assertEqual($matches[6]->name, 'GRA-DEP', sprintf('%s equals expected', $matches[6]->name));
    $this->assertEqual($matches[7]->name, 'FCB-ELC', sprintf('%s equals expected', $matches[7]->name));
    $this->assertEqual($matches[8]->name, 'LEV-VIL', sprintf('%s equals expected', $matches[8]->name));
    $this->assertEqual($matches[9]->name, 'MAL-ATH', sprintf('%s equals expected', $matches[9]->name));
  }


  function testAdminsResolveBettingSlips() {
    // Arrange
    $current_slip = $this->helper->createBettingSlipForDate(date('Y-m-d', strtotime('+1 day')));
    $results = array();
    foreach ($current_slip->matches as $match) {
      $results["matches[{$match->id}]"] = '1';
    }
    $this->drupalLogin($this->admin);

    // Act
    $this->drupalPost('admin/quinieleitor/resolve', $results, 'Resolve');

    // Assert
    $saved_slip = quinieleitor_load_slip($current_slip->id);
    $this->assertTrue($saved_slip->closed);
    $this->assertEqual(MATCHES_PER_SLIP, count($saved_slip->matches));
    foreach ($saved_slip->matches as $match) {
      $this->assertEqual(1, $match->result);
    }
  }


  function testTheClassificationIsUpdatedWhenABettingSlipIsResolved() {
    $current_slip = $this->helper->createBettingSlipForDate(date('Y-m-d', strtotime('+1 day')));
    $this->helper->betterBetsForSlip($this->betters[0], $current_slip, array_fill(0, MATCHES_PER_SLIP, '2')); 
    $this->helper->betterBetsForSlip($this->betters[1], $current_slip, array_fill(0, MATCHES_PER_SLIP, '2')); 
    $results = array_fill(1, MATCHES_PER_SLIP, '2');

    quinieleitor_resolve_betting_slip($current_slip->id, $results);

    $hall_of_fame = quinieleitor_load_hall_of_fame();
    $this->assertEqual(2, count($hall_of_fame));
  }

}
